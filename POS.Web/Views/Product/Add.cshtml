@model POS.ViewModel.ProductModel

@{
    ViewData["Title"] = "New Product";
}

<h2>Add New Product</h2>

<form asp-controller="Product" asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="SupplierId">Supplier</label>
        <select asp-for="SupplierId" class="form-control" >
            <option>Pilih Supplier</option>
            <option value="1">Supplier 1</option>
            <option value="2">Supplier 2</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" >
            <option>Pilih Category</option>
            <option value="1">Category 1</option>
            <option value="2">Category 2</option>
            <option value="3">Category 3</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity Per Unit</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice">Unit Price</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="UnitInStock">Unit In Stock</label>
        <input asp-for="UnitInStock" class="form-control" />
        <span asp-validation-for="UnitInStock" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="UnitOnOrder">Unit On Order</label>
        <input asp-for="UnitOnOrder" class="form-control" />
        <span asp-validation-for="UnitOnOrder" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="ReorderLevel">Reorder Level</label>
        <input asp-for="ReorderLevel" class="form-control" />
        <span asp-validation-for="ReorderLevel" class="text-danger" />
    </div>
    <label>Discontinued</label>
    <div class="form-check">
        <input asp-for="Discontinued" class="form-check-input" type="checkbox" id="yes" value="True" />
        <label asp-for="Discontinued" for="yes"> Yes </label>
    </div>
    <div class="form-check">
        <input asp-for="Discontinued" class="form-check-input" type="checkbox" id="no" value="False" />
        <label asp-for="Discontinued" for="no"> No </label>
    </div>
    <div class="pt-2 pb-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
