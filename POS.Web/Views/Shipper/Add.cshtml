@model POS.ViewModel.ShipperModel

@{
    ViewData["Title"] = "New Shipper";
}

<h2>Add New Shipper</h2>

<form asp-controller="Shipper" asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="CompanyName">CompanyName</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger" />
    </div>
   
    <div class="pt-2 pb-2">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }